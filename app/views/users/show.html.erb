<div class="users-show">
<h2>マイページ</h2>
<%= link_to "プロフィールを編集", edit_user_path(@user), class: "edit-profile-link" %>
<% @posts.each do |post| %>
  <div class="main">
      <ul class="post-info">
        <li class="user-name"><%= current_user.name %></li>
        <li><%= time_ago_in_words(post.created_at) %></li>
        <li><%= link_to "編集", edit_post_path(post), class: "edit-post-link" %></li>
      </ul>
    <p class="post-content"><%= post.content %></p>
    <%= image_tag post.image.url if post.image && post.image.url %>
</div>
<% end %>
</div>
