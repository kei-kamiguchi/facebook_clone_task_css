<div class="posts-new">
  <h2 class="mt-4">新規作成</h2>
  <div class="posts-main">
  <div class="form-group">
    <%= form_with(model:@post, local:true) do |form| %>
      <%= form.text_area :content, placeholder: "#{current_user.name}さん、その気持ち、シェアしよう", class: "text_area form-control mb-3", rows: 5 %>
      <%= image_tag(@post.image.url) if @post.image && @post.image.url %>
      <div class="text-center">
      <%= form.file_field :image, class: "mt-3" %>
      <%= form.hidden_field :image_cache %>
      </div>
      <div class="text-right">
      <%= form.submit "投稿", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  </div>
</div>
