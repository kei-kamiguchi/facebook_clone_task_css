<!DOCTYPE html>
<html>
  <head>
    <title>SessionLogin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="wrap">
      <nav id="navbar">
        <a href="/posts"><%= image_tag "facebooklogoo1-1.jpg", width: "85px", class: "logo" %></a>
        <ul class="nav-link">
        <% if logged_in? %>
            <li>
              <%= link_to "作成", new_post_path %>
            </li>
            <li>
              <%= link_to "投稿一覧", posts_path %>
            </li>
            <li>
              <%= link_to "ユーザ一覧", users_path %>
            </li>
            <li>
              <%= link_to "マイページ", user_path(current_user.id) %>
            </li>
            <li>
              <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
            </li>
        <% else %>
            <li>
              <%= link_to "アカウント登録", new_user_path %>
            </li>
            <li>
              <%= link_to "ログイン", new_session_path %>
            </li>
        <% end %>
        </ul>
      </nav>
      <%= yield %>
      <footer class="footer">
        <p>Copyright © 2018 DIVE INC All RIGHTS RESERVED.</p>
      </footer>
    </div>
  </body>
</html>
